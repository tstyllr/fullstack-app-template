# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="mysql://user:password@localhost:3306/database_name"

# Better Auth Configuration
# Secret for session encryption (MUST change in production)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-key-here-change-in-production-use-openssl-rand-base64-32"
# Base URL for auth endpoints
BETTER_AUTH_URL="http://localhost:3000"

# Authentication Settings
# Set to false to bypass authentication in development (NOT for production)
REQUIRES_AUTH="true"

# Tencent Cloud SMS Configuration
# Get credentials from: https://console.cloud.tencent.com/cam/capi
# SMS console: https://console.cloud.tencent.com/smsv2
TENCENT_SMS_SECRET_ID="your-tencent-cloud-secret-id"
TENCENT_SMS_SECRET_KEY="your-tencent-cloud-secret-key"
TENCENT_SMS_APP_ID="your-sms-app-id"
TENCENT_SMS_SIGN_NAME="your-sms-signature-name"
TENCENT_SMS_TEMPLATE_ID="your-verification-code-template-id"
TENCENT_SMS_REGION="ap-guangzhou"  # Optional, defaults to ap-guangzhou
TENCENT_SMS_CODE_TIMEOUT="2"  # Verification code validity period in minutes

# LLM
DEEPSEEK_API_KEY="your-deepseek-api-key"
