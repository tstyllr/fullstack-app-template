{
   "name": "backend",
   "version": "1.0.0",
   "description": "Backend server combining best practices from Express, TypeScript, MySQL, and modern tooling",
   "module": "src/index.ts",
   "type": "module",
   "private": true,
   "scripts": {
      "start": "NODE_ENV=production bun run src/index.ts",
      "dev": "NODE_ENV=development bun --watch run src/index.ts",
      "test": "NODE_ENV=test bun test",
      "test:watch": "NODE_ENV=test bun test --watch",
      "tc": "bunx tsc",
      "db:migrate": "dotenvx run -f .env.development -- bunx prisma migrate dev",
      "db:generate": "dotenvx run -f .env.development -- bunx prisma generate",
      "db:studio": "dotenvx run -f .env.development -- bunx prisma studio"
   },
   "keywords": [
      "express",
      "typescript",
      "mysql",
      "prisma",
      "jwt",
      "rest-api"
   ],
   "author": "",
   "license": "ISC",
   "dependencies": {
      "@dotenvx/dotenvx": "^1.51.0",
      "@prisma/client": "^6.13.0",
      "bcrypt": "^5.1.1",
      "better-auth": "^1.4.3",
      "cors": "^2.8.5",
      "express": "^5.1.0",
      "ms": "^2.1.3",
      "openai": "^6.0.1",
      "tencentcloud-sdk-nodejs-sms": "^4.1.126",
      "winston": "^3.14.2",
      "zod": "^3.25.76"
   },
   "devDependencies": {
      "@types/bcrypt": "^5.0.2",
      "@types/bun": "latest",
      "@types/cors": "^2.8.17",
      "@types/express": "^5.0.3",
      "@types/jsonwebtoken": "^9.0.7",
      "@types/supertest": "^6.0.3",
      "prisma": "^6.13.0",
      "supertest": "^7.1.4",
      "typescript": "^5.0.0"
   }
}
